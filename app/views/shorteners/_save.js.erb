$("ul.errors").html("")
<% if @shortener.errors.any? %>
  <% @shortener.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".shorterner-index").html("<%= j render 'index' %>")
  $("#shorterner-modal").modal("hide")
<% end %>